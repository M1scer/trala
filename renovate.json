{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "baseBranchPatterns": [
    "main"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "major"
      ],
      "matchPackageNames": [
        "*"
      ]
    },
    {
      "groupName": "all non-major updates",
      "groupSlug": "patch",
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true,
      "matchPackageNames": [
        "*"
      ]
    }
  ]
}
